<div class="container w-50">
  <div class="card mb-3 w-100">
    <h5 class="card-header">Edit Profile</h5>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :current_password %> <em>(we need your current password to confirm your changes)</em><br />
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-secondary mt-2' %>
        </div>
      <% end %>
      

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger mt-2' %>
    </div>
  </div>
  <%= link_to "Back", :back %>
</div>